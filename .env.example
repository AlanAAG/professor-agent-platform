# --- CORE API KEYS & ACCESS ---
# Required for the API Server (RAG & Chat) and Harvester/Refinery Jobs.

# Gemini API key for embeddings and generation.
GEMINI_API_KEY=

# Supabase project URL (e.g., https://xyz.supabase.co).
SUPABASE_URL=

# Supabase Service Role Key (secret key, NOT the anon key).
SUPABASE_KEY=

# A long, random string used to secure the public API endpoints via the 'x-api-key' header.
SECRET_API_KEY=

# Username for logging into the external course platform (used by Harvester).
COACH_USERNAME=

# Password for logging into the external course platform (used by Harvester).
COACH_PASSWORD=

# Comma-separated list of allowed frontend domains for CORS (e.g., https://prod.app.com,http://localhost:3000).
ALLOWED_ORIGINS=

# --- OPTIONAL / ADVANCED ---

# Fallback key for OpenAI embeddings (if Gemini fails).
# OPENAI_API_KEY=

# Enable Whisper transcription fallback when Zoom/Drive transcripts are missing.
# ENABLE_WHISPER_FALLBACK=true
# WHISPER_MODEL_NAME=whisper-1
# Maximum size (in MB) to download per recording when using Whisper.
# WHISPER_MAX_DOWNLOAD_MB=400

# Comma-separated list of course codes to limit the harvester run (e.g., ECOMM101,FIN300).
# COURSE_FILTER=

# 'daily' for recent content, 'backlog' for all content.
# PIPELINE_MODE=daily

# 'true' to skip files previously ingested based on URL.
# DEDUP_BY_URL=true

# URL of the deployed API health endpoint (for CI ping).
# PRODUCTION_API_URL=
